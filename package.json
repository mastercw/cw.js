{
  "name": "cw",
  "version": "0.3.0",
  "description": "A comprehensive Morse Code (CW) library",
  "main": "dist/cw.cjs.js",
  "module": "dist/cw.esm.js",
  "browser": "dist/cw.min.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "mocha --require ts-node/register --loader=ts-node/esm test/**/*.ts",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mastercw/cw.js.git"
  },
  "keywords": [
    "morse",
    "code",
    "cw",
    "continuous",
    "wave"
  ],
  "author": "Yuval Adam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mastercw/cw.js/issues"
  },
  "homepage": "https://www.mastercw.com/cw.js/",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "rollup": "^4.9.6",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist"
  ]
}
